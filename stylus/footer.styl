.footer
  clear: both
  font-size: 0.85em
  line-height: 1.8em

  @media DESKTOP
    padding: CONTENT_PADDING_DESKTOP
    padding-bottom: 20px
  @media TABLET
    padding: CONTENT_PADDING_TABLET
    padding-bottom: 20px
  @media PHONE
    font-size: 1.2em
    line-height: 1.8em
    padding: CONTENT_PADDING_PHONE + 10px
    padding-bottom: 10px


  p.randomquote
    color: GRAY
    font-size: 1.5em
    line-height: (2.25 / 1.5)em
    margin-bottom: (1 / 1.5)em

    q
      font-style: italic
      quotes: none

      &:before
        content: '\201C'
        font-size: 1.8em
        line-height: inherit
      &:after
        content: '\201D'
        font-size: 1.8em
        line-height: inherit

    .quote-attribution:before
      content: '\2013' // en dash
      padding: 0 4px

  .col
    min-width: 140px
    width: 22%
    &.about-this-site
      width: 30%

    // override normal vertical stacking behavior in footer
    @media TABLET_TIGHT
      float: left
      width: 22% !important
      &.about-this-site
        width: 30% !important

  a
    {LINK}
      border-bottom: 1px solid GRAY_LIGHT
      text-decoration: none
      color: BLUE_DARK
    {HOVER}
      border-bottom: 1px solid BLUE_DARK
      color: BLUE_DARK

  h3
    font-size: 1.3em
    margin-bottom: 0.8em
    font-weight: bold
    text-transform: uppercase

  ul
    list-style: none
    margin-left: 0

    li
      margin-bottom: 3px

  small
    color: GRAY_DARKER
    display: block
    font-size: 0.8em
