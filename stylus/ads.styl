.adsense-in-content
  width: 100%
  margin-bottom: 1.5em
  text-align: center

  @media PHONE
    margin-bottom: 16px

  html.seen-survey &
    @media DESKTOP
      width: 336px
    @media DESKTOP_TIGHT
      width: 100%
      margin-bottom: 0
    @media TABLET
      width: 336px
    @media TABLET_TIGHT
      width: 100%
      margin-bottom: 0

.adsense-after-content, .adsense-matched-content, .medianet-after-content
  width: 100%
  margin-bottom: 20px

.adsense-sidebar
  text-align: center

  @media DESKTOP
    width: 336px
  @media TABLET
    width: 160px

  &:last-child, .after-content &
    margin-bottom: 0

  // Make sidebar readable when top ad in sidebar is blocked
  &:first-child
    min-height: 300px

.adsense-link-unit
  max-width: 100%
  margin-bottom: 1.5em
  overflow: hidden

.adsense-native-in-feed
  max-width: 100%
  margin-bottom: 1.5em

.sidebar a.house
  display: block
  background-color: palette('Cyan')
  border: 4px solid palette('Cyan', '700')
  font-size: 2.5em
  font-weight: bold
  line-height: 1.5em
  min-height: 290px
  padding: 40px 20px
  text-align: center
  {LINK}
    color: palette('White')
  {HOVER}
    -webkit-filter: brightness(1.1)
    filter: brightness(1.1)
    text-decoration: none
